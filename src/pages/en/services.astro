---

<BaseLayout title="Services - Printek" description="Discover our specialized services in pneumatic transport and industrial material handling.">
  <!-- Page Header -->
  <section class="bg-gradient-to-r from-industrial-900 to-primary-800 text-white py-20 mt-20">
    <div class="container mx-auto px-4 lg:px-6 text-center">
      <h1 class="text-5xl md:text-6xl font-heading font-bold mb-6">
        Our Services
      </h1>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto leading-relaxed">
        Everything your company needs to operate without interruptions
      </p>
    </div>
  </section>

  <!-- Services Detail -->
  <section class="py-20">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="space-y-24">
        {services.map((service, index) => (
          <div class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} items-center gap-16`}>
            <!-- Content -->
            <div class="lg:w-1/2">
              <h2 class="text-4xl font-heading font-bold text-industrial-900 mb-6">
                {service.title}
              </h2>
              <p class="text-lg text-industrial-600 mb-8 leading-relaxed">
                {service.description}
              </p>

              <!-- Features -->
              <div class="mb-8">
                <h3 class="text-xl font-heading font-semibold text-industrial-900 mb-4">
                  Características Principales:
                </h3>
                <div class="grid md:grid-cols-2 gap-3">
                  {service.features.map((feature) => (
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-primary-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      <span class="text-industrial-700">{feature}</span>
                    </div>
                  ))}
                </div>
              </div>

              <!-- CTA -->
              <div class="flex flex-col sm:flex-row gap-4">
                <a 
                  href="/en/contact"
                  class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 transform hover:scale-105"
                >
                  Request a Quote
                </a>
                <a 
                  href="/en/about"
                  class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 text-center"
                >
                  Learn More
                </a>
              </div>
            </div>

            <!-- Image -->
            <div class="lg:w-1/2">
              <div class="relative rounded-2xl overflow-hidden shadow-2xl group">
                <img 
                  src={service.image} 
                  alt={service.title}
                  class="w-full h-96 object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <!-- Indicador de calidad -->
                <div class="absolute top-6 right-6">
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Sector Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 lg:px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-heading font-bold text-industrial-900 mb-6">
          Sectors We Serve
        </h2>
        <p class="text-xl text-industrial-600 max-w-3xl mx-auto">
          Our services enable companies to refocus their purchasing resources, freeing them from the operational management of non-critical supplies so they can concentrate on strategic sourcing.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sectors.map((sector) => (
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group hover:transform hover:scale-105">
            <!-- Imagen con overlay gradient -->
            <div class="relative h-48 overflow-hidden">
              <img 
                src={sector.image} 
                alt={sector.name}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                loading="lazy"
                onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
              />
              <!-- Fallback gradient si la imagen falla -->
              <div class={`absolute inset-0 bg-gradient-to-br ${sector.gradient.replace('from-', 'from-').replace('to-', 'to-')} hidden items-center justify-center`}>
                <div class="text-white text-6xl">⚙️</div>
              </div>
              <!-- Título sobre la imagen -->
              <div class="absolute bottom-4 left-4 right-4">
                <h3 class="text-lg font-heading font-bold text-white leading-tight">
                  {sector.name}
                </h3>
              </div>
            </div>

            <!-- Contenido -->
            <div class="p-6">
              <div class="text-primary-600 font-medium mb-3 text-sm">
                {sector.position}
              </div>
              <!-- Lista vertical de bullets -->
              <ul class="text-industrial-600 text-sm leading-relaxed space-y-2">
                {sector.description.map((item) => (
                  <li class="flex items-start">
                    <span class="text-primary-500 mr-2 mt-1 text-xs">•</span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-industrial-50 py-20">
    <div class="container mx-auto px-4 lg:px-6 text-center">
      <h2 class="text-4xl font-heading font-bold text-industrial-900 mb-6">
        Your strategic partner for industrial procurement
      </h2>
      <p class="text-xl text-industrial-600 mb-8 max-w-3xl mx-auto">
        Our team is ready to help you find the perfect solution for your industrial needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/en/contact"  ---bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 transform hover:scale-105---
          class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
        >
          Contact now
        </a>
        <a 
          href="/en/about"
          class="border-2 border-industrial-600 text-industrial-600 hover:bg-industrial-600 hover:text-white px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300"
        >
          Learn More
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
// Script para manejar imágenes que no cargan
document.addEventListener('DOMContentLoaded', function() {
  const images = document.querySelectorAll('img[data-fallback]');
  
  images.forEach(img => {
    img.addEventListener('error', function() {
      // Si falla la imagen principal, mostrar el gradient fallback
      this.style.display = 'none';
      const fallback = this.nextElementSibling;
      if (fallback && fallback.classList.contains('hidden')) {
        fallback.classList.remove('hidden');
        fallback.classList.add('flex');
      }
    });
  });
});
</script>