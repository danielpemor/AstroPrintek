---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import ServicesSection from '../../components/ServicesSection.astro';
import WhyChooseSection from '../../components/WhyChooseSection.astro';
---

<script is:inline>
  // Marcar que el usuario cambi√≥ manualmente de idioma
  (function() {
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('lang') || document.referrer.includes(window.location.origin)) {
      sessionStorage.setItem('manualLangSwitch', 'true');
    }
  })();
</script>

<BaseLayout title="Printek">
  <Hero 
    title="Industrial & IT Sourcing"
    subtitle="Industrial procurement specialists with 23 years of experience."
    backgroundVideo="/videos/mixkit-grunge-industrial-gears-viewed-in-detail-12339-hd-ready.mp4"
    backgroundImage="/images/industrial-fallback.jpg"
    ctaText="Learn More"
    ctaLink="#services"
    secondaryCtaText="Contact"
    secondaryCtaLink="/en/contact"
  />
  
  <ServicesSection />
  
  <WhyChooseSection />
  
</BaseLayout>