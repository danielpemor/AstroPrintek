<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sección de Características Multiidioma</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'industrial': {
                            200: '#e5e7eb',
                            300: '#d1d5db',
                            900: '#111827'
                        },
                        'primary': {
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8'
                        }
                    },
                    fontFamily: {
                        'heading': ['system-ui', 'sans-serif']
                    }
                }
            }
        }
    </script>
    <style>
        /* Fondo claro sofisticado */
        .gradient-bg-light {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 30%, #f1f5f9 70%, #e2e8f0 100%);
        }

        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-8px);
        }
    </style>
</head>
<body class="bg-gray-100">

<section class="py-20 gradient-bg-light text-gray-800 relative overflow-hidden">
    <!-- Geometric Pattern Overlay -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.3) 0%, transparent 50%), radial-gradient(circle at 75% 75%, rgba(37, 99, 235, 0.3) 0%, transparent 50%);"></div>
    </div>

    <div class="container mx-auto px-4 lg:px-6 relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2 id="main-title" class="text-4xl md:text-5xl font-heading font-bold mb-6 bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                <!-- Se llenará dinámicamente -->
            </h2>
            <p id="main-description" class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                <!-- Se llenará dinámicamente -->
            </p>
            <div class="mt-8 w-24 h-1 bg-gradient-to-r from-primary-600 to-primary-400 mx-auto rounded-full"></div>
        </div>

        <!-- Features Grid -->
        <div id="features-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
            <!-- Se llenará dinámicamente -->
        </div>

        <!-- Statistics -->
        <div class="relative">
            <div id="stats-grid" class="grid md:grid-cols-4 gap-8 text-center pt-8">
                <!-- Se llenará dinámicamente -->
            </div>
        </div>
    </div>
</section>

<script>
    // Configuración de contenido multiidioma
    const featuresConfig = {
        es: {
            title: "¿Por Qué Elegirnos?",
            description: "Somos tu socio de confianza para estrategias personalizadas construidas sobre años de experiencia",
            features: [
                {
                    icon: "/images/logro.png",
                    title: "Experiencia que resuelve",
                    description: "Nuestro equipo multidisciplinario domina compras, calidad, producción y logística para enfrentar cualquier reto industrial.",
                    alt: "Experiencia"
                },
                {
                    icon: "/images/logistica.png",
                    title: "Suministro adaptado a tus retos",
                    description: "No solo vendemos productos, diseñamos estrategias a la medida que optimizan costos y procesos.",
                    alt: "Logística"
                },
                {
                    icon: "/images/logistic.png",
                    title: "Abastecimiento sin fronteras",
                    description: "Navegamos comercio exterior, aduanas y regulaciones para que tu operación sea ágil y sin sorpresas.",
                    alt: "Abastecimiento"
                },
                {
                    icon: "/images/transferencia-de-conocimiento.png",
                    title: "Alianzas estratégicas e innovación",
                    description: "Trabajamos con fabricantes líderes para ofrecer acceso a las últimas innovaciones del mercado.",
                    alt: "Alianzas"
                },
                {
                    icon: "/images/tech-support.png",
                    title: "Asistencia técnica cuando lo necesites",
                    description: "Ofrecemos asistencia técnica constante para que tu operación nunca se detenga.",
                    alt: "Soporte"
                },
                {
                    icon: "/images/distribucion.png",
                    title: "Logística optimizada",
                    description: "Coordinamos entregas desde múltiples proveedores con eficiencia, integrando transporte, aduanas y almacenamiento para que tu operación no se detenga.",
                    alt: "Distribución"
                }
            ],
            stats: [
                {
                    number: "23",
                    text: "Años de Experiencia"
                },
                {
                    number: "11",
                    text: "Países Atendidos"
                },
                {
                    number: "1000+",
                    text: "Proyectos Completados"
                },
                {
                    number: "10,000+",
                    text: "Productos disponibles"
                }
            ]
        },
        en: {
            title: "Why Choose Us?",
            description: "We are your trusted partner for personalized strategies built on years of experience",
            features: [
                {
                    icon: "/images/logro.png",
                    title: "Problem-solving experience",
                    description: "Our multidisciplinary team masters purchasing, quality, production, and logistics to tackle any industrial challenge.",
                    alt: "Experience"
                },
                {
                    icon: "/images/logistica.png",
                    title: "Supply solutions tailored to your challenges",
                    description: "We don't just sell products, we design custom strategies that optimize costs and processes.",
                    alt: "Logistics"
                },
                {
                    icon: "/images/logistic.png",
                    title: "Borderless supply chain",
                    description: "We navigate international trade, customs, and regulations so your operations run smoothly and without surprises.",
                    alt: "Supply Chain"
                },
                {
                    icon: "/images/transferencia-de-conocimiento.png",
                    title: "Strategic partnerships and innovation",
                    description: "We work with leading manufacturers to provide access to the latest market innovations.",
                    alt: "Partnerships"
                },
                {
                    icon: "/images/tech-support.png",
                    title: "Technical assistance when you need it",
                    description: "We provide constant technical assistance so your operations never stop.",
                    alt: "Support"
                },
                {
                    icon: "/images/distribucion.png",
                    title: "Optimized logistics",
                    description: "We efficiently coordinate deliveries from multiple suppliers, integrating transportation, customs, and warehousing so your operations never stop.",
                    alt: "Distribution"
                }
            ],
            stats: [
                {
                    number: "23",
                    text: "Years of Experience"
                },
                {
                    number: "11",
                    text: "Countries Served"
                },
                {
                    number: "1000+",
                    text: "Completed Projects"
                },
                {
                    number: "10,000+",
                    text: "Products Available"
                }
            ]
        }
    };

    class MultilingualFeatures {
        constructor() {
            this.currentLanguage = this.detectLanguage();
            this.init();
        }

        // Detecta el idioma del navegador y de la URL
        detectLanguage() {
            // PRIORIDAD 1: Preferencia manual
            const manualPref = localStorage.getItem('user_preferred_lang');
            if (manualPref) {
                return manualPref;
            }
            
            // PRIORIDAD 2: URL
            const urlPath = window.location.pathname;
            if (urlPath.startsWith('/en/') || urlPath === '/en') {
                return 'en';
            }
            
            // PRIORIDAD 3: Navegador
            const browserLang = navigator.language || navigator.languages[0];
            const langCode = browserLang.split('-')[0].toLowerCase();
            return langCode === 'en' ? 'en' : 'es';
        }

        // Renderiza el encabezado de la sección
        renderHeader() {
            const config = featuresConfig[this.currentLanguage];
            
            document.getElementById('main-title').textContent = config.title;
            document.getElementById('main-description').textContent = config.description;
        }

        // Renderiza las características
        renderFeatures() {
            const config = featuresConfig[this.currentLanguage];
            const featuresGrid = document.getElementById('features-grid');
            
            featuresGrid.innerHTML = config.features.map(feature => `
                <div class="text-center group card-hover">
                    <div class="bg-gradient-to-br from-primary-600 to-primary-700 w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg shadow-primary-600/30 group-hover:shadow-primary-500/50 transition-all duration-300">
                        <img src="${feature.icon}" alt="${feature.alt}" class="w-full h-full object-contain p-2">
                    </div>
                    <h3 class="text-xl font-heading font-semibold mb-4 text-gray-800">
                        ${feature.title}
                    </h3>
                    <p class="text-gray-600 leading-relaxed">
                        ${feature.description}
                    </p>
                </div>
            `).join('');
        }

        // Renderiza las estadísticas
        renderStats() {
            const config = featuresConfig[this.currentLanguage];
            const statsGrid = document.getElementById('stats-grid');
            
            statsGrid.innerHTML = config.stats.map(stat => `
                <div class="group">
                    <div class="bg-white/80 backdrop-blur-sm rounded-xl p-6 border border-white/20 shadow-lg group-hover:bg-white/90 group-hover:shadow-xl transition-all duration-300">
                        <div class="text-4xl md:text-5xl font-heading font-bold text-primary-600 mb-2 group-hover:text-primary-500 transition-colors duration-300">
                            ${stat.number}
                        </div>
                        <div class="text-gray-600 font-medium">
                            ${stat.text}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Inicializa el componente
        init() {
            this.renderHeader();
            this.renderFeatures();
            this.renderStats();
        }
    }

    // Inicializa el componente multiidioma cuando el DOM está listo
    document.addEventListener('DOMContentLoaded', () => {
        new MultilingualFeatures();
    });
</script>

</body>
</html>