<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuestros Servicios Multiidioma</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'industrial': {
                            50: '#f8fafc',
                            600: '#475569',
                            700: '#334155',
                            900: '#0f172a'
                        },
                        'primary': {
                            600: '#2563eb',
                            700: '#1d4ed8'
                        }
                    },
                    fontFamily: {
                        'heading': ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
</head>
<body>
    <section id="services" class="py-20 bg-industrial-50">
        <div class="container mx-auto px-4 lg:px-6">
            <!-- Section Header -->
            <div class="text-center mb-16">
                <h2 id="services-title" class="text-4xl md:text-5xl font-heading font-bold text-industrial-900 mb-6">
                    <!-- Se llenará dinámicamente -->
                </h2>
                <p id="services-description" class="text-xl text-industrial-600 max-w-3xl mx-auto leading-relaxed">
                    <!-- Se llenará dinámicamente -->
                </p>
            </div>

            <!-- Services Grid -->
            <div id="services-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Se llenará dinámicamente -->
            </div>
        </div>
    </section>

    <script>
        // Configuración de servicios multiidioma
        const servicesConfig = {
            es: {
                title: "Nuestros servicios",
                description: "Todo lo que tu empresa necesita para operar sin interrupciones",
                ctaText: "Más información →",
                servicesHref: "/services",
                services: [
                    {
                        title: "Abastecimiento técnico industrial a medida",
                        description: "Identificamos problemas de abastecimiento como escasez, obsolescencia, calidad y proveedores inestables.",
                        backgroundImage: "https://images.unsplash.com/photo-1565793298595-6a879b1d9492?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
                        gradient: "linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
                    },
                    {
                        title: "Soporte Postventa",
                        description: "Actuamos como enlace entre el cliente y los fabricantes o distribuidores, gestionando fallas, traducciones técnicas y garantías.",
                        backgroundImage: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
                        gradient: "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)"
                    },
                    {
                        title: "Entregas Urgentes",
                        description: "Respondemos con agilidad ante situaciones críticas, ya sea en la cadena de suministro o durante el proceso de producción.",
                        backgroundImage: "https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
                        gradient: "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)"
                    }
                ]
            },
            en: {
                title: "Our Services",
                description: "Everything your company needs to operate without interruptions",
                ctaText: "Learn more →",
                servicesHref: "/en/services",
                services: [
                    {
                        title: "Custom Industrial Technical Procurement",
                        description: "We identify supply chain issues such as shortages, obsolescence, quality problems, and unstable suppliers.",
                        backgroundImage: "https://images.unsplash.com/photo-1565793298595-6a879b1d9492?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
                        gradient: "linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
                    },
                    {
                        title: "After-Sales Support",
                        description: "We act as a link between customers and manufacturers or distributors, managing failures, technical translations, and warranties.",
                        backgroundImage: "https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
                        gradient: "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)"
                    },
                    {
                        title: "Urgent Deliveries",
                        description: "We respond with agility to critical situations, whether in the supply chain or during the production process.",
                        backgroundImage: "https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80",
                        gradient: "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)"
                    }
                ]
            }
        };

        class MultilingualServices {
            constructor() {
                this.currentLanguage = this.detectLanguage();
                this.init();
            }

            // Detecta el idioma del navegador y de la URL
            detectLanguage() {
                // Primero intenta detectar desde la URL
                const urlPath = window.location.pathname;
                if (urlPath.startsWith('/en/') || urlPath === '/en') {
                    return 'en';
                }
                
                // Si no hay prefijo en la URL, detecta del navegador
                const browserLang = navigator.language || navigator.languages[0];
                const langCode = browserLang.split('-')[0].toLowerCase();
                
                // Retorna 'en' si el navegador está en inglés, sino 'es'
                return langCode === 'en' ? 'en' : 'es';
            }

            // Renderiza el encabezado de la sección
            renderHeader() {
                const config = servicesConfig[this.currentLanguage];
                
                document.getElementById('services-title').textContent = config.title;
                document.getElementById('services-description').textContent = config.description;
            }

            // Renderiza la grid de servicios
            renderServices() {
                const config = servicesConfig[this.currentLanguage];
                const servicesGrid = document.getElementById('services-grid');
                
                servicesGrid.innerHTML = config.services.map(service => `
                    <div class="relative rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 group hover:transform hover:scale-105 overflow-hidden min-h-[400px]"
                         style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7)), url('${service.backgroundImage}'), ${service.gradient}; background-size: cover; background-position: center;">
                        
                        <div class="relative z-10 p-8 h-full flex flex-col justify-between text-white">
                            <div>
                                <h3 class="text-2xl font-heading font-semibold mb-4 text-center group-hover:text-blue-200 transition-colors">
                                    ${service.title}
                                </h3>
                                
                                <p class="text-gray-100 mb-6 leading-relaxed">
                                    ${service.description}
                                </p>
                            </div>
                            
                            <!-- CTA -->
                            <div class="text-center">
                                <a href="${config.servicesHref}" class="text-blue-200 hover:text-white font-semibold transition-colors duration-200 group-hover:underline">
                                    ${config.ctaText}
                                </a>
                            </div>
                        </div>
                    </div>
                `).join('');
            }

            // Inicializa el componente
            init() {
                this.renderHeader();
                this.renderServices();
            }
        }

        // Inicializa el componente multiidioma cuando el DOM está listo
        document.addEventListener('DOMContentLoaded', () => {
            new MultilingualServices();
        });
    </script>
</body>
</html>