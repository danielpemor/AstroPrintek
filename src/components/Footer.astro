---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { name: 'Sobre Nosotros', href: '/about' },
    { name: 'Nuestro Equipo', href: '/team' },
  ],
  services: [
    { name: '####', href: '/services/####' },
    { name: '####', href: '/services/materials' },
    { name: 'Mantenimiento', href: '/services/####' },
    { name: '####', href: '/services/####' }
  ],
  support: [
    { name: 'Contacto', href: '/contact' },
    { name: 'Soporte Técnico', href: '/support' },
    { name: 'Documentación', href: '/docs' },
    { name: 'FAQ', href: '/faq' }
  ]
};

const socialLinks = [
  { name: 'LinkedIn', href: '#', icon: 'linkedin' },
  { name: 'Twitter', href: '#', icon: 'twitter' },
  { name: 'YouTube', href: '#', icon: 'youtube' },
  { name: 'Facebook', href: '#', icon: 'facebook' }
];
---

<footer class="bg-industrial-900 text-white">
  <div class="container mx-auto px-4 lg:px-6 py-16">
    <!-- Main Footer Content -->
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="mb-6">
          <h3 class="text-2xl font-heading font-bold mb-4">
            <span class="text-primary-400">Printek</span> Supplies
          </h3>
          <p class="text-industrial-300 leading-relaxed mb-6">
            Nos especializamos en compras industriales y de TI.
          </p>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-3">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-primary-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-industrial-300">Manzanero 1918. Col. Sandra Lucía Cd. Juárez, Chih. 32530</span>
          </div>
          
          <div class="flex items-center">
            <svg class="w-5 h-5 text-primary-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M3 8l7.89 4.26a2 2 0 002.22 0L21 8M3 8v8a2 2 0 002 2h14a2 2 0 002-2V8"/>
            </svg>
            <span class="text-industrial-300">sales@printeksupplies.com</span>
          </div>
          
          <div class="flex items-center">
            <svg class="w-5 h-5 text-primary-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="text-industrial-300">+52 (656) 705 7931</span>
          </div>
        </div>
      </div>
      <!-- Company Links -->
      <div>
        <h4 class="text-lg font-heading font-semibold mb-6 text-white">Empresa</h4>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-industrial-300 hover:text-primary-400 transition-colors duration-200"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services Links -->
      <div>
        <h4 class="text-lg font-heading font-semibold mb-6 text-white">Servicios</h4>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-industrial-300 hover:text-primary-400 transition-colors duration-200"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support Links -->
      <div>
        <h4 class="text-lg font-heading font-semibold mb-6 text-white">Soporte</h4>
        <ul class="space-y-3">
          {footerLinks.support.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="text-industrial-300 hover:text-primary-400 transition-colors duration-200"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-industrial-700 my-12"></div>

    <!-- Bottom Footer -->
    <div class="flex flex-col md:flex-row justify-between items-center">
      <!-- Copyright -->
      <div class="text-industrial-400 text-sm mb-4 md:mb-0">
        © {currentYear} Printek Supplies. Todos los derechos reservados.
      </div>

      <!-- Social Links -->
      <div class="flex space-x-6">
        {socialLinks.map((social) => (
          <a 
            href={social.href}
            class="text-industrial-400 hover:text-primary-400 transition-colors duration-200"
            aria-label={social.name}
          >
            {social.icon === 'linkedin' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {social.icon === 'twitter' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            )}
            {social.icon === 'youtube' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            )}
            {social.icon === 'facebook' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>

    <!-- Legal Links -->
    <div class="mt-8 pt-6 border-t border-industrial-700">
      <div class="flex flex-col md:flex-row justify-center items-center space-y-2 md:space-y-0 md:space-x-8">
        <a href="/privacy" class="text-industrial-400 hover:text-primary-400 text-sm transition-colors duration-200">
          Política de Privacidad
        </a>
        <a href="/terms" class="text-industrial-400 hover:text-primary-400 text-sm transition-colors duration-200">
          Términos de Servicio
        </a>
        <a href="/cookies" class="text-industrial-400 hover:text-primary-400 text-sm transition-colors duration-200">
          Política de Cookies
        </a>
      </div>
    </div>
  </div>
</footer>